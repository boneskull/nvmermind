{
  "name": "nvmermind",
  "version": "0.2.3",
  "description": "Uninstall old versions of Node.js as installed by nvm",
  "keywords": [
    "nvm",
    "node",
    "nodejs",
    "node.js",
    "uninstall",
    "clean",
    "cleanup"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/nvmermind"
  },
  "license": "Apache-2.0",
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "main": "src/index.js",
  "bin": {
    "nvmermind": "./src/index.js"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "release": "standard-version -a",
    "test": "nyc mocha \"test/**/*.spec.js\"",
    "posttest": "markdownlint-cli2 \"*.md\" && eslint ."
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.md": [
      "markdownlint-cli2-fix"
    ],
    "*.{yml,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "auto",
    "singleQuote": true
  },
  "dependencies": {
    "@humanwhocodes/env": "2.2.2",
    "ora": "5.4.1",
    "prompts": "2.4.2",
    "semver": "7.3.8"
  },
  "devDependencies": {
    "@types/semver": "7.3.13",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "markdownlint-cli2": "0.5.1",
    "mocha": "10.2.0",
    "nyc": "15.1.0",
    "prettier": "2.8.1",
    "sinon": "15.0.1",
    "standard-version": "9.5.0",
    "unexpected": "13.1.0",
    "unexpected-sinon": "11.1.0"
  },
  "engines": {
    "node": ">=14"
  }
}
