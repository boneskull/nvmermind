{
  "name": "nvmermind",
  "version": "1.0.0",
  "description": "Uninstall old versions of Node.js as installed by nvm",
  "keywords": [
    "nvm",
    "node",
    "nodejs",
    "node.js",
    "uninstall",
    "clean",
    "cleanup",
    "version",
    "versions"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/nvmermind"
  },
  "license": "Apache-2.0",
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "main": "./src/index.js",
  "types": "./types/src/index.d.ts",
  "bin": {
    "nvmermind": "./src/index.js"
  },
  "files": [
    "src",
    "types"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "rebuild": "run-s build clean",
    "lint:staged": "lint-staged",
    "husky": "husky install",
    "prepare": "run-p husky rebuild",
    "test": "smoker test:smoke",
    "test:smoke": "npx mkdirp ./test/fixtures/versions/node; npx cross-env NVM_DIR=./test/fixtures node .",
    "lint": "run-p lint:sources lint:markdown",
    "lint:sources": "eslint .",
    "lint:markdown": "markdownlint-cli2 README.md",
    "lint:commit": "commitlint"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.md": [
      "markdownlint-cli2-fix"
    ],
    "*.{yml,md,js}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "auto",
    "singleQuote": true
  },
  "dependencies": {
    "@humanwhocodes/env": "3.0.1",
    "filesize": "10.0.12",
    "get-folder-size": "4.0.0",
    "kleur": "4.1.5",
    "ora": "5.4.1",
    "pluralize": "8.0.0",
    "prompts": "2.4.2",
    "semver": "7.5.4"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@tsconfig/node16": "16.1.1",
    "@types/get-folder-size": "3.0.1",
    "@types/node": "20.6.2",
    "@types/pluralize": "0.0.30",
    "@types/prompts": "2.4.4",
    "@types/semver": "7.5.2",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-semistandard": "17.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "markdownlint-cli2": "0.10.0",
    "midnight-smoker": "7.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": "^16.13.0 || ^18.0.0 || ^20.0.0"
  },
  "overrides": {
    "kleur": "4.1.5"
  }
}
