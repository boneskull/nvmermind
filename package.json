{
  "name": "nvmermind",
  "version": "1.0.2",
  "description": "Uninstall old versions of Node.js as installed by nvm",
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/nvmermind"
  },
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.19.0"
  },
  "bin": {
    "nvmermind": "./src/index.js"
  },
  "main": "./src/index.js",
  "types": "./types/src/index.d.ts",
  "files": [
    "src",
    "types"
  ],
  "keywords": [
    "nvm",
    "node",
    "nodejs",
    "node.js",
    "uninstall",
    "clean",
    "cleanup",
    "version",
    "versions"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "commitlint": "commitlint",
    "fix": "run-p -sl \"fix:*\"",
    "fix:eslint": "eslint --fix .",
    "fix:markdown": "markdownlint-cli2 --fix README.md",
    "fix:prettier": "prettier --write .",
    "husky": "husky",
    "lint": "run-p -sl \"lint.*\"",
    "lint-staged": "lint-staged",
    "lint:eslint": "eslint .",
    "lint:markdown": "markdownlint-cli2 README.md",
    "lint:prettier": "prettier --check .",
    "lint:sources": "run-p -sl lint:eslint lint:prettier",
    "prepare": "run-p -sl husky rebuild",
    "rebuild": "run-s -s clean build",
    "test": "smoker test:smoke",
    "test:smoke": "npx mkdirp ./test/fixtures/versions/node; npx cross-env NVM_DIR=./test/fixtures node ."
  },
  "dependencies": {
    "@humanwhocodes/env": "3.0.1",
    "filesize": "11.0.13",
    "get-folder-size": "4.0.0",
    "kleur": "4.1.5",
    "ora": "5.4.1",
    "pluralize": "8.0.0",
    "prompts": "2.4.2",
    "semver": "7.7.3"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.39.1",
    "@stylistic/eslint-plugin": "5.5.0",
    "@tsconfig/node16": "16.1.6",
    "@types/get-folder-size": "3.0.4",
    "@types/node": "22.17.1",
    "@types/pluralize": "0.0.33",
    "@types/prompts": "2.4.9",
    "@types/semver": "7.7.1",
    "eslint": "9.39.1",
    "eslint-plugin-jsonc": "2.21.0",
    "eslint-plugin-perfectionist": "4.15.1",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "markdownlint-cli2": "0.18.1",
    "midnight-smoker": "8.0.0",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "prettier-plugin-jsdoc": "1.5.0",
    "prettier-plugin-pkg": "0.21.2",
    "typescript": "5.2.2"
  },
  "overrides": {
    "kleur": "4.1.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "markdownlint-cli2 --fix"
    ],
    "*.{ya?ml,md,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "auto",
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-jsdoc"
    ]
  }
}
