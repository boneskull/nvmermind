{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)"
  ],
  "packageRules": [
    {
      "automerge": true,
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    },
    {
      "enabled": false,
      "matchPackageNames": [
        "find-up",
        "globby",
        "log-symbols",
        "read-pkg",
        "term-size",
        "wrap-ansi",
        "write-pkg",
        "@types/wrap-ansi",
        "execa",
        "ora"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    }
  ],
  "semanticCommits": "enabled"
}
